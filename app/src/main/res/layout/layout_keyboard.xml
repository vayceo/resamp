<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#65FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.samp.mobile.launcher.util.CustomEditText
            android:id="@+id/main_et_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_weight="0.7"
            android:ems="10"
            android:imeOptions="actionUnspecified|actionGo|actionSend|actionDone|flagNoFullscreen|flagNoExtractUi"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/main_but_input_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="0.1"
            android:background="@drawable/ic_buttoncolor"
            android:gravity="center"
            android:minWidth="@dimen/_25sdp"
            android:minHeight="@dimen/_27sdp"
            android:text="&#x22C1;"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_but_input_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="0.1"
            android:background="@drawable/ic_buttoncolor"
            android:gravity="center"
            android:minWidth="@dimen/_25sdp"
            android:minHeight="@dimen/_27sdp"
            android:text="&#x22C0;"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/main_but_input_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="0.1"
            android:background="@drawable/ic_buttoncolor"
            android:gravity="center"
            android:minWidth="@dimen/_25sdp"
            android:minHeight="@dimen/_27sdp"
            android:text="/"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>